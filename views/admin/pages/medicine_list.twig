{% extends 'admin/components/base.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">{{ translate('medicine_list') }}</h3>
                            <div class="nk-block-des text-soft">
                                <p>You have total {{ total }} medicine.</p>
                            </div>
                        </div><!-- .nk-block-head-content -->
                        <div class="nk-block-head-content">
                            <div class="toggle-wrap nk-block-tools-toggle">
                                <a href="#" class="btn btn-icon btn-trigger toggle-expand mr-n1" data-target="pageMenu"><em
                                            class="icon ni ni-menu-alt-r"></em></a>
                                <div class="toggle-expand-content" data-content="pageMenu">
                                    <ul class="nk-block-tools g-3">
                                        <li class="nk-block-tools-opt">
                                            <div class="drodown">
                                                <a href="#" class="dropdown-toggle btn btn-icon btn-primary"
                                                   data-toggle="dropdown"><em class="icon ni ni-plus"></em></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <ul class="link-list-opt no-bdr">
                                                        <li><a href="#" data-toggle="modal" data-target="#modalDefault"><span>{{ translate('add_medicine') }}</span></a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="modal fade" tabindex="-1" id="modalDefault">
                                                    <div class="modal-dialog modal-xl" role="document">
                                                        <div class="modal-content">
                                                            <a href="#" class="close" data-dismiss="modal"
                                                               aria-label="Close">
                                                                <em class="icon ni ni-cross"></em>
                                                            </a>
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">{{ translate('add_medicine') }}</h5>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="{{ redirect('admin/post-add-medicine') }}"
                                                                      method="post">
                                                                    <div class="card-inner">
                                                                        <div class="preview-block">
                                                                            <span class="preview-title-lg overline-title">{{ translate('medicine_information') }}</span>
                                                                            <div class="row gy-4">
                                                                                <div class="col-sm-6">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label"
                                                                                               for="name">{{ translate('name') }}</label>
                                                                                        <div class="form-control-wrap">
                                                                                            <input type="text"
                                                                                                   class="form-control"
                                                                                                   name="name"
                                                                                                   id="name"
                                                                                                   placeholder="Enter Name">
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-sm-6">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label"
                                                                                               for="type">{{ translate('type') }}</label>
                                                                                        <div class="form-control-wrap ">
                                                                                            <div class="form-control-select">
                                                                                                <select class="form-control"
                                                                                                        name="type"
                                                                                                        id="type">
                                                                                                    {% for medicine_type in medicine_for_view.medicine_types %}
                                                                                                        <option value="{{ medicine_type.id }}">{{ medicine_type.name }}</option>
                                                                                                    {% endfor %}
                                                                                                </select>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-sm-6">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label"
                                                                                               for="quantity">{{ translate('quantity') }}</label>
                                                                                        <div class="form-control-wrap">
                                                                                            <input type="text"
                                                                                                   class="form-control"
                                                                                                   name="quantity"
                                                                                                   id="quantity"
                                                                                                   placeholder="Enter quantity">
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-sm-6">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label"
                                                                                               for="unit">{{ translate('unit') }}</label>
                                                                                        <div class="form-control-wrap ">
                                                                                            <div class="form-control-select">
                                                                                                <select class="form-control"
                                                                                                        name="unit"
                                                                                                        id="unit">
                                                                                                    <option value="hộp">
                                                                                                        Hộp
                                                                                                    </option>
                                                                                                    <option value="viên">
                                                                                                        Viên
                                                                                                    </option>
                                                                                                </select>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-sm-12">
                                                                                    <div class="form-group">
                                                                                        <label class="form-label"
                                                                                               for="description">{{ translate('description') }}</label>
                                                                                        <div class="form-control-wrap">
                                                                                <textarea type="text"
                                                                                          class="form-control"
                                                                                          name="description"
                                                                                          id="description"
                                                                                          placeholder="Enter Last Name"></textarea>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <hr class="preview-hr">
                                                                            <div class="col-sm-6">
                                                                                <div class="form-group">
                                                                                    <button type="submit"
                                                                                            class="btn btn-success">{{ translate('add_medicine') }}
                                                                                    </button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                            <div class="modal-footer bg-light">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div><!-- .toggle-wrap -->
                        </div><!-- .nk-block-head-content -->
                    </div><!-- .nk-block-between -->
                </div><!-- .nk-block-head -->
                <div class="nk-block">
                    {% if(Session.hasFlash('errorAddMedicine')) %}
                        <div class="alert alert-danger">{{ session.getFlash('errorAddMedicine') }}</div>
                    {% endif %}
                    <div class="card card-bordered card-stretch">
                        <div class="card-inner-group">
                            <div class="card-inner position-relative card-tools-toggle">
                                <div class="card-title-group">
                                    <div class="card-tools mr-n1">
                                        <ul class="btn-toolbar gx-1">
                                            <li>
                                                <a href="#" class="btn btn-icon search-toggle toggle-search"
                                                   data-target="search"><em class="icon ni ni-search"></em></a>
                                            </li><!-- li -->
                                            <li class="btn-toolbar-sep"></li><!-- li -->
                                        </ul><!-- .btn-toolbar -->
                                    </div><!-- .card-tools -->
                                </div><!-- .card-title-group -->
                                <div class="card-search search-wrap" data-search="search">
                                    <div class="card-body">
                                        <div class="search-content">
                                            <a href="#" class="search-back btn btn-icon toggle-search"
                                               data-target="search"><em class="icon ni ni-arrow-left"></em></a>
                                            <input type="text" class="form-control border-transparent form-focus-none"
                                                   placeholder="Search by user or email">
                                            <button class="search-submit btn btn-icon"><em
                                                        class="icon ni ni-search"></em></button>
                                        </div>
                                    </div>
                                </div><!-- .card-search -->
                            </div><!-- .card-inner -->
                            <div class="card-inner p-0">
                                <div class="nk-tb-list nk-tb-ulist is-compact">
                                    <div class="nk-tb-item nk-tb-head">
                                        <div class="nk-tb-col nk-tb-col-check">
                                            <div class="custom-control custom-control-sm custom-checkbox notext">
                                                <input type="checkbox" class="custom-control-input" id="uid">
                                                <label class="custom-control-label" for="uid"></label>
                                            </div>
                                        </div>
                                        <div class="nk-tb-col"><span class="sub-text">Id</span></div>
                                        <div class="nk-tb-col"><span class="sub-text">{{ translate('name') }}</span></div>
                                        <div class="nk-tb-col tb-col-md"><span class="sub-text">{{ translate('type') }}</span></div>
                                        <div class="nk-tb-col nk-tb-col-tools text-right">{{ translate('action') }}</div>
                                    </div><!-- .nk-tb-item -->
                                    {% for medicine in medicine_for_view.medicines %}
                                        <div class="nk-tb-item">
                                            <div class="nk-tb-col nk-tb-col-check">
                                                <div class="custom-control custom-control-sm custom-checkbox notext">
                                                    <input type="checkbox" class="custom-control-input" id="uid1">
                                                    <label class="custom-control-label" for="uid1"></label>
                                                </div>
                                            </div>
                                            <div class="nk-tb-col tb-col-md">
                                                <span>{{ medicine.id }}</span>
                                            </div>
                                            <div class="nk-tb-col">
                                                <span>{{ medicine.name }}</span>
                                            </div>
                                            <div class="nk-tb-col tb-col-md">
                                                <span>{{ medicine.type_name }}</span>
                                            </div>
                                            <div class="nk-tb-col nk-tb-col-tools">
                                                <ul class="nk-tb-actions gx-2">
                                                    <li>
                                                        <div class="drodown">
                                                            <a href="#"
                                                               class="btn btn-sm btn-icon btn-trigger dropdown-toggle"
                                                               data-toggle="dropdown"><em
                                                                        class="icon ni ni-more-h"></em></a>
                                                            <div class="dropdown-menu dropdown-menu-right">
                                                                <ul class="link-list-opt no-bdr">
                                                                    <li>
                                                                        <a href="{{ redirect('admin/medicine-detail', {'id': medicine.id}) }}"><em
                                                                                    class="icon ni ni-eye"></em><span>{{ translate('view_detail') }}</span></a>
                                                                    </li>
                                                                    <li class="divider"></li>
                                                                    <li><a href="#"><em
                                                                                    class="icon fas fa-trash-alt"></em><span>{{ translate('delete_medicine') }}</span></a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div><!-- .nk-tb-item -->
                                    {% endfor %}
                                </div><!-- .nk-tb-list -->
                            </div><!-- .card-inner -->
                            <div class="card-inner">
                                <div id="pagination"></div>
                            </div><!-- .card-inner -->
                        </div><!-- .card-inner-group -->
                    </div><!-- .card -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="{{ createLink('js/dist/medicine_list.js')}}"></script>
{% verbatim  %}
<script>
    tinymce.init({
    selector: '#description',
    skin: false
});
</script>
{% endverbatim  %}
{% endblock %}
