<div class="modal fade" tabindex="-1" id="modalAddPrescription">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                <em class="icon ni ni-cross"></em>
            </a>
            <div class="modal-header">
                <h5 class="modal-title">Add Prescription</h5>
            </div>
            <div class="modal-body">
                <form id="add-prescription-form" action="{{ redirect('admin/post-prescription-add') }}" method="post">
                    <input type="text" name="medical-file-id" hidden value="{{ medicalFile.id }}">
                    <input type="text" name="user-id" hidden value="{{ medicalFile.user_id }}">
                    <input type="text" name="health-id" hidden>
                    <div class="card-inner">
                        <div class="preview-block">
                            <span class="preview-title-lg overline-title">Main Information</span>
                            <div class="row gy-4">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label" for="full-name">Full name</label>
                                        <div class="form-control-wrap">
                                            <input type="text" class="form-control" name="full-name" id="full-name"
                                                   placeholder="Enter full-name"
                                                   value="{{ medicalFile.first_name }} {{ medicalFile.last_name }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label" for="password">Gender</label>
                                        <div class="form-control-wrap">
                                            <div class="custom-control custom-radio">
                                                <input type="radio" id="male" name="gender"
                                                       class="custom-control-input" value="Male" {{ medicalFile.gender == 'Male' ? 'checked' : '' }}>
                                                <label class="custom-control-label" for="male">Male</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" id="female" name="gender"
                                                       class="custom-control-input" value="Female" {{ medicalFile.gender == 'Female' ? 'checked' : '' }}>
                                                <label class="custom-control-label" for="female">Female</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label" for="age">Age</label>
                                        <div class="form-control-wrap">
                                            <input type="text" class="form-control" name="age" id="age"
                                                   placeholder="Enter Age" value="{{ medicalFile.age }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="form-label" for="address">Address</label>
                                        <div class="form-control-wrap">
                                            <input type="text" class="form-control" name="address" id="address"
                                                   placeholder="Enter address" value="{{ medicalFile.full_address }}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label class="form-label" for="note">Description</label>
                                        <div class="form-control-wrap">
                                            <textarea type="text" class="form-control" name="note" id="note"
                                                      placeholder="Enter Last Name">11111111</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% for count in 1..10 %}
                                <div class="row gy-4">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="form-label" for="select-name-{{ count }}">Name {{ count }}</label>
                                            <div class="form-control-wrap">
                                                <select class="form-control selectpicker" id="select-name-{{ count }}" data-live-search="true" name="name-{{ count }}">
                                                    <option data-tokens="---">----</option>
                                                    {% for medicine in medicines %}
                                                        <option data-tokens="{{ medicine.name }}">{{ medicine.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="form-label"
                                                   for="quantity-{{ count }}">Quantity {{ count }}</label>
                                            <div class="form-control-wrap">
                                                <input type="text" class="form-control" name="quantity-{{ count }}"
                                                       id="quantity-{{ count }}"
                                                       placeholder="Enter Quantity {{ count }}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="form-label"
                                                   for="dosage-{{ count }}">Dosage {{ count }}</label>
                                            <div class="form-control-wrap">
                                                <input type="text" class="form-control" name="dosage-{{ count }}"
                                                       id="dosage-{{ count }}"
                                                       placeholder="Enter Dosage {{ count }}">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <hr class="preview-hr">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Add healths</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <span class="sub-text">Modal Footer Text</span>
            </div>
        </div>
    </div>
</div>
