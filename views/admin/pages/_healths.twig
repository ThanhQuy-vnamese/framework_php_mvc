                                                <em class="icon fas fa-prescription"></em><span>Views prescription</span></a>
                                        </li>
                                        <li><a href="javascript:void(0)" class="js-add-prescription"
                                               data-health-id="{{ health.id }}"><em
                                                        class="icon fas fa-prescription"></em><span>Add prescription</span></a>
                                        </li>
                                        <li><a href="javascript:void(0)" class="js-edit-prescription"
                                               data-health-id="{{ health.id }}"><em
                                                        class="icon fas fa-prescription"></em><span>Edit prescription</span></a>
                                        </li>
                                        <li class="divider"></li>
                                        <li><a href="javascript:void(0)" class="js-delete-health"
                                               data-health-id="{{ health.id }}" data-medical-file-id="{{ medicalFile.id }}"><em
                                                        class="icon fas fa-trash-alt"></em><span>Delete healths</span></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div><!-- .nk-tb-item -->
        {% endfor %}
    </div><!-- .nk-tb-list -->
</div><!-- .nk-block -->

