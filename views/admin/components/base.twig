<!DOCTYPE html>
<html lang="zxx" class="js">
<head>
    <meta charset="utf-8">
    <meta name="author" content="Softnio">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A powerful and conceptual apps base dashboard template that especially build for developers and programmers.">
    <!-- Fav Icon  -->
    <link rel="shortcut icon" href="{{ createLink('template/admin/images/favicon.png') }}">
    <!-- Page Title  -->
    <title>Sales Dashboard | DashLite Admin Template</title>
    <!-- StyleSheets  -->
    <link rel="stylesheet" href="{{ createLink('template/admin/assets/css/dashlite.css?ver=2.9.0') }}">
    <link rel="stylesheet" href="{{ createLink('template/admin/assets/css/libs/fontawesome-icons.css?ver=2.9.0') }}">
    <link id="skin-default" rel="stylesheet" href="{{ createLink('template/admin/assets/css/theme.css?ver=2.9.0') }}">
    <link rel="stylesheet" href="{{ createLink('template/admin/assets/css/editors/tinymce.css?ver=2.9.0') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    {% block css %}
    {% endblock %}
</head>

<body class="nk-body bg-lighter npc-general has-sidebar ">
<div class="nk-app-root">
    <!-- main @s -->
    <div class="nk-main ">
        <!-- sidebar @s -->
       {{ include('admin/components/slidebar.twig') }}
        <!-- sidebar @e -->
        <!-- wrap @s -->
        <div class="nk-wrap ">
            <!-- main header @s -->
            <div class="nk-header nk-header-fixed is-light">
                <div class="container-fluid">
                    <div class="nk-header-wrap">
                        <div class="nk-menu-trigger d-xl-none ml-n1">
                            <a href="#" class="nk-nav-toggle nk-quick-nav-icon" data-target="sidebarMenu"><em class="icon ni ni-menu"></em></a>
                        </div>
                        <div class="nk-header-brand d-xl-none">
                            <a href="{{ redirect('admin/user-list') }}" class="logo-link">
                                <img class="logo-light logo-img" src="{{ createLink('template/admin/images/logo.png')}}" srcset="{{ createLink('template/admin/images/logo2x.png 2x')}}" alt="logo">
                                <img class="logo-dark logo-img" src="{{ createLink('template/admin/images/logo-dark.png')}}" srcset="{{ createLink('template/admin/images/logo-dark2x.png 2x')}}" alt="logo-dark">
                            </a>
                        </div><!-- .nk-header-brand -->
                        <div class="nk-header-tools">
                            <ul class="nk-quick-nav">
                                <li class="dropdown user-dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <div class="user-toggle">
                                            <div class="user-avatar sm">
                                                <em class="icon ni ni-user-alt"></em>
                                            </div>
                                            <div class="user-info d-none d-md-block">
                                                <div class="user-status">
                                                    {% if Auth.user().role == 1 %}
                                                        Administrator
                                                    {% elseif Auth.user().role == 2 %}
                                                        Doctor
                                                    {% endif %}
                                                </div>
                                                <div class="user-name dropdown-indicator">{{ Auth.user().first_name }} {{ Auth.user().last_name }}</div>
                                            </div>
                                        </div>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-md dropdown-menu-right dropdown-menu-s1">
                                        <div class="dropdown-inner user-card-wrap bg-lighter d-none d-md-block">
                                            <div class="user-card">
                                                <div class="user-avatar">
                                                    <span>AB</span>
                                                </div>
                                                <div class="user-info">
                                                    <span class="lead-text">Nguyen Van A</span>
                                                    <span class="sub-text">nguyenvana@mail.com</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="dropdown-inner">
                                            <ul class="link-list">
                                                <li><a href="#"><em class="icon ni ni-signout"></em><span>Sign out</span></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li><!-- .dropdown -->
                            </ul><!-- .nk-quick-nav -->
                        </div><!-- .nk-header-tools -->
                    </div><!-- .nk-header-wrap -->
                </div><!-- .container-fliud -->
            </div>
            <!-- main header @e -->
            <!-- content @s -->
            <div class="nk-content ">
                {% block content %}
                {% endblock %}
            </div>
            <!-- content @e -->
            <!-- footer @s -->
            <div class="nk-footer">
                <div class="container-fluid">
                    <div class="nk-footer-wrap">
                        <div class="nk-footer-copyright"> &copy; 2021 DashLite. Template by <a href="https://softnio.com" target="_blank">Softnio</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- footer @e -->
        </div>
        <!-- wrap @e -->
    </div>
    <!-- main @e -->
</div>
<!-- app-root @e -->
<!-- JavaScript -->
<script src="{{ createLink('template/admin/assets/js/bundle.js?ver=2.9.0') }}"></script>
<script src="{{ createLink('template/admin/assets/js/scripts.js?ver=2.9.0') }}"></script>
<script src="{{ createLink('template/admin/assets/js/charts/gd-default.js?ver=2.9.0') }}"></script>
<script src="{{ createLink('template/admin/assets/js/libs/editors/tinymce.js?ver=2.9.0') }}"></script>
{% block javascript %}
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
</body>

</html>
