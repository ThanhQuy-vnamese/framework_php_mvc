	<body>
		<!--::header part start::-->
		{{ include('user/components/menu.twig')}}
		<!-- Header part end-->

		<!-- breadcrumb start-->
			<section class="breadcrumb_part breadcrumb_bg"> <div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="breadcrumb_iner">
							<div class="breadcrumb_iner_item">
								<h2>Blog</h2>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- breadcrumb start-->
			<section class="pt-5 pb-5">
				<div class="container">
					<div class="row mb-md-2">
						{% for blog in data %}
						<div class="col-md-6 col-lg-4">
							<a href="#">
								<div class="card shadow-sm border-light mb-4">
									<a href="{{ createLink('user/detail-blog') }}?id={{blog.id}}" class="position-relative">
