<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>medical</title>

    <!--Pháº§n style, boostrap-->
    {{ include('user/components/head.twig') }}
    <!--End-->
</head>

<body>
<!--::header part start::-->
{{ include('user/components/menu.twig') }}
<!-- Header part end-->

<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-xl-5">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h5>{{ translate('prefix_banner') }}</h5>
                        <h1>{{ translate('suffix_banner') }}</h1>
                        <a href="{{ createLink('doctor/book-clinic') }}?user_id={{ session.get('user').user_id }}"
                           class="btn_2">{{ translate('create_calendar') }}</a>

                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="banner_img">
                    <img src="{{ createLink('style/img/banner_img.png') }}" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part start-->

<!-- about us part start-->
<section class="about_us padding_top">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-6 col-lg-6">
                <div class="about_us_img">
                    <img src="{{ createLink('style/img/top_service.png') }}" alt="">
                </div>
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="about_us_text">
                    <h2>{{ translate('about_us') }}</h2>
                    <p>{{ translate('intro_about_us') }}</p>
                    <a class="btn_2 " href="{{ createLink('about') }}">{{ translate('more') }}</a>
                    <div class="banner_item">
                        <div class="single_item">
                            <img src="{{ createLink('style/img/icon/banner_1.svg') }}" alt="">
                            <h5>{{ translate('emergency') }}</h5>
                        </div>
                        <div class="single_item">
                            <img src="{{ createLink('style/img/icon/banner_2.svg') }}" alt="">
                            <h5>{{ translate('appointment') }}</h5>
                        </div>
                        <div class="single_item">
                            <img src="{{ createLink('style/img/icon/banner_3.svg') }}" alt="">
                            <h5>{{ translate('qualified') }}</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- about us part end-->

<!--::doctor_part start::-->
<section class="doctor_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="section_tittle text-center">
                    <h2>
                        {{ translate('experienced_doctor') }}
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            {% for user in getAllDoctor %}
                <div class="col-sm-6 col-lg-3">
                    <div class="single_blog_item">
                        <div class="single_blog_img">
                            <img src="{{ createLink('style/img/doctor/doctor_1.png') }}" alt="doctor">
                            <div class="social_icon">
                                <ul>
                                    <li><a href="#"><i class="ti-facebook"></i></a></li>
                                    <li><a href="#"><i class="ti-twitter-alt"></i></a></li>
                                    <li><a href="#"><i class="ti-instagram"></i></a></li>
                                    <li><a href="#"><i class="ti-skype"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="single_text">
                            <div class="single_blog_text">
                                <h3>
                                    {{ user.first_name }}
                                    {{ user.last_name }}</h3>
                                <p>Heart specialist</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!--::doctor_part end::-->


<!-- footer part start-->
{{ include('user/components/footer.twig') }}
<!-- footer part end-->


</body>

</html>
